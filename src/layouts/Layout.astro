---
import "@fontsource-variable/montserrat";
import "../styles/global.css";

import Aside from "../components/Aside/Aside.astro";
import Header from "../components/Header.astro";
import Podcast from "../components/Podcast.astro";

interface Props {
  author?: string;
  role?: string;
  url?: string;
  description?: string;
  keywords?: string;
  multiPage?: boolean;
  title?: string;
}

const {
  author = "Germán A. Aliprandi",
  role = "Hands-On Engineering Manager",
  url = "https://galiprandi.github.io/me",
  description = `Resume of Germán A. Aliprandi, Engineering Manager and Software Developer with over 20 years of experience.`,
  keywords = "Germán A. Aliprandi, Engineering Manager, Software Developer, Tech Lead, Resume",
  multiPage = false,
  title,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={multiPage ? "multi-page" : "one-page"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title ?? author}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={url} />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={author} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="/me/_astro/profile_circle.Cgs8IIl7_Z2qfGXH.webp"
    />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:title" content={author} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:image"
      content="/me/_astro/profile_circle.Cgs8IIl7_Z2qfGXH.webp"
    />

    <link rel="icon" type="image/svg+xml" href="/me/favicon.svg" />

    <meta
      name="google-site-verification"
      content="vrTl-28LgNcY2s040biIZLr98evvgN7z-yvIuR9ibjU"
    />

    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-CZ03PKC275"></script>
    <script is:inline src="/me/googleTag.js"></script>
  </head>
  <body class={multiPage ? "multi-page" : "one-page"}>
    <Header author={author} role={role} />
    <div class="columns">
      <Aside />
      <slot />
    </div>
    <Podcast />
  </body>
</html>
