---
import { Image } from "astro:assets";
import profile from "../assets/profile_circle.png";

const { author, role } = Astro.props;
---

<header>
  <div class="title">
    <h1 class="upper">{author}</h1>
    <h2 class="upper light">{role}</h2>
  </div>
  <div class="image">
    <Image src={profile} alt={author} width={123} height={123} />
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const imageElement = document.querySelector(".image") as HTMLImageElement;
    const pic = new URLSearchParams(window.location.search).get("pic");

    if (imageElement && pic !== null) imageElement.style.display = "block";
  });
</script>

<style>
  header {
    display: flex;
    justify-content: space-between;
    padding: 2em 0;
  }

  h1 {
    font-size: 2.3rem;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: larger;
    font-weight: 400;
    margin: 0;
  }

  .image {
    display: none;
    padding-right: 1em;
  }

  /* Screens less than 900px */
  @media only screen and (max-width: 900px) {
    header {
      flex-direction: column-reverse;
      align-items: center;
      text-align: center;
    }
  }

  /* Print */
  @media only print {
    header {
      padding: 1em 0;
    }

    .image {
      img {
        height: 100px;
        width: auto;
      }
    }
  }
</style>
