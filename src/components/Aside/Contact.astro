---
import IconPhone from '../Icons/IconPhone.astro'
import IconEmail from '../Icons/IconEmail.astro'
import IconLinkedin from '../Icons/IconLinkedin.astro'
import IconGithub from '../Icons/IconGithub.astro'
import IconResume from '../Icons/IconResume.astro'
---

<section class="contact">
  <h3 class="upper">Contact</h3>
  <div>
    <IconResume />
    <a href="https://galiprandi.github.io/me" class="light"
      >galiprandi.github.io/me</a
    >
  </div>

  <div>
    <IconEmail />
    <a href="mailto:galiprandi@gmail.com" class="light">galiprandi@gmail.com</a>
  </div>

  <div>
    <IconLinkedin />
    <a
      href="https://www.linkedin.com/in/galiprandi"
      target="_blank"
      class="light">/in/galiprandi</a
    >
  </div>

  <div>
    <IconGithub />
    <a href="https://github.com/galiprandi" target="_blank" class="light"
      >/galiprandi</a
    >
  </div>
</section>

<style>
  .contact > div {
    display: flex;
    align-items: center;
    gap: 1em;
    margin: 1em 0;
  }

  /* Screens less than 900px */
  @media only screen and (max-width: 900px) {
    .contact > div {
      justify-content: center;
    }
  }

  /* Print styles */
  @media only print {
    .contact > div {
      margin: 0.7em 0;
    }
  }
</style>
